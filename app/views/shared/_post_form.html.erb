<%= form_for(@post) do |f| %>
<div class="editor mx-auto w-10/12 flex flex-col text-gray-800 border border-gray-300 p-4 shadow-lg max-w-2xl bg-gray-800 rounded-lg border-gray-900">
  <%= f.text_field :title, class:"title bg-gray-100 border border-gray-300 p-2 mb-4 outline-none", placeholder: "Title" %>
   <%= f.text_area :content, class: "description bg-gray-100 sec p-3 h-60 border border-gray-300 outline-none", placeholder: "Describe everything about this post here" %>
  <div class="buttons flex mt-2">

    <%= link_to "Cancel", root_path, class: "btn border bg-gray-300 p-1 px-4 rounded cursor-pointer text-gray-500 ml-auto" %>
    <div class="actions btn border border-indigo-800 p-1  px-4  font-black rounded-lg cursor-pointer text-white ml-2 bg-indigo-800">
      <%= f.submit "Post" %>
    </div>
    <%end  %>
  </div>
</div>
